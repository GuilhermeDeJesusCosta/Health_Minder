<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/dialogLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Descrição" />

        <EditText
            android:id="@+id/editTextHorarioInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:minHeight="48dp"
            android:maxLength="4"
            android:inputType="number"
            android:digits="0123456789:"
            android:hint="Horário Inicial (HH:MM)" />

        <EditText
            android:id="@+id/editTextDosesIntervalos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLength="2"
            android:minHeight="48dp"
            android:inputType="number"
            android:digits="0123456789"
            android:hint="Doses/Intervalos" />

        <EditText
            android:id="@+id/editTextIntervaloTempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:digits="0123456789:"
            android:hint="Intervalo de Tempo (HH:MM)" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
